extends ../common.pug
block styleCss
 link(rel='stylesheet', type='text/css', href='/css/cart.css')
block content
  section
  .row
    .col-lg-8
      .mb-3
        .pt-4.wish-list
          h5.mb-4
            | Cart (
            span= summ
            |  items)
          each item in shoppingBags
            .row.mb-4
              .col-md-5.col-lg-3.col-xl-3
                .view.zoom.overlay.z-depth-1.rounded.mb-3.mb-md-0
                  img.img-fluid.w-100(src='https://mdbootstrap.com/img/Photos/Horizontal/E-commerce/Vertical/12a.jpg', alt='Sample')
                  a(href='#!')
                    .mask
                      img.img-fluid.w-100(src='https://mdbootstrap.com/img/Photos/Horizontal/E-commerce/Vertical/12.jpg')
                      .mask.rgba-black-slight
              .col-md-7.col-lg-9.col-xl-9
                div
                  .d-flex.justify-content-between
                    div
                      h5=item.product.title
                      p.mb-2.text-muted.text-uppercase.small= 'Author: '+ item.product.author
                      p.mb-2.text-muted.text-uppercase.small= "Category: "+ item.product.decription
                      p.mb-2.text-muted.text-uppercase.small= "Price: "+item.product.price
                      p.mb-3.text-muted.text-uppercase.small= "Quantity: "+item.count
                  .d-flex.justify-content-between.align-items-center
                    div
                      a.card-link-secondary.small.text-uppercase.mr-3(href='#!', type='button')
                        i.fas.fa-trash-alt.mr-1
                        |  Remove item
                      a.card-link-secondary.small.text-uppercase(href='#!', type='button')
                        i.fas.fa-heart.mr-1
                        |  Move to wish list
                    p.mb-0
                      span
                        strong#summary="Total: "+item.total +" VND"
          hr.mb-4
          p.text-primary.mb-0
            i.fas.fa-info-circle.mr-1
            |  Do not delay the purchase, adding
            |               items to your cart does not mean booking them.
      // Card
      // Card
      .mb-3.total-cart
        .pt-4
          h5.mb-4 Expected shipping delivery
          p.mb-0  Thu., 12.03. - Mon., 16.03.
      // Card
      // Card
      .mb-3.total-cart
        .pt-4
          h5.mb-4 We accept
          img.mr-2(width='45px', src='https://mdbootstrap.com/wp-content/plugins/woocommerce-gateway-stripe/assets/images/visa.svg', alt='Visa')
          img.mr-2(width='45px', src='https://mdbootstrap.com/wp-content/plugins/woocommerce-gateway-stripe/assets/images/amex.svg', alt='American Express')
          img.mr-2(width='45px', src='https://mdbootstrap.com/wp-content/plugins/woocommerce-gateway-stripe/assets/images/mastercard.svg', alt='Mastercard')
          img.mr-2(width='45px', src='https://mdbootstrap.com/wp-content/plugins/woocommerce/includes/gateways/paypal/assets/images/paypal.png', alt='PayPal acceptance mark')
      // Card
    // Grid column
    // Grid column
    .col-lg-4
      // Card
      .mb-3.total-cart
        .pt-4
          h5.mb-3 The total amount of
          ul.list-group.list-group-flush
            li.list-group-item.d-flex.justify-content-between.align-items-center.border-0.px-0.pb-0
              | Temporary amount
              span $25.98
            li.list-group-item.d-flex.justify-content-between.align-items-center.px-0
              | Shipping
              span Gratis
            li.list-group-item.d-flex.justify-content-between.align-items-center.border-0.px-0.mb-3
              div
                strong The total amount of
                strong
                  p.mb-0 (including VAT)
              span
                strong $53.98
          button.btn.btn-primary.btn-block(type='button') go to checkout
      // Card
      // Card
